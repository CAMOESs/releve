      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="row form-row field ">


    <div class="form-group col-md-4">
      <%= form.label :nom %>
      <%= form.text_field :nom, class: "form-control", id: "inputPassword4", placeholder:"Nom" %>
    </div>

        <div class="form-group col-md-4">
          <%= form.label :prenom %>
          <%= form.text_field :prenom, class: "form-control", id: "inputPassword4", placeholder:"Prenom" %>
        </div>
        <div class="form-group col-md-4">
          <%= form.label :moderne %>
          <%= form.text_field :moderne, class: "form-control", id: "inputPassword4", placeholder:"Moderne" %>
        </div>

  </div>

  <div class="row form-row field ">


    <div class="form-group col-md-6">
      <%= form.label :lecture %>
      <%= form.number_field :lecture , class: "form-control", id: "inputPassword4", placeholder:"Lecture" %>
    </div>

        <div class="form-group col-md-6">

        </div>
  </div>




  <div class="row form-row field ">

    <div class="form-group col-md-6">
      <%= form.label :commecri %>
      <%= form.number_field :commecri, class: "form-control", id: "inputPassword4", placeholder:"histoire géographie" %>
    </div>

    <div class="form-group col-md-6">
      <%= form.label :anglais %>
      <%= form.number_field :anglais, class: "form-control", id: "inputPassword4", placeholder:"Anglais" %>
    </div>

  </div>





  <div class="row form-row field ">

    <div class="form-group col-md-6">
      <%= form.label :math %>
      <%= form.number_field :math, class: "form-control", id: "inputPassword4", placeholder:"Mathématique" %>
    </div>

    <div class="form-group col-md-6">
      <% if @user.moderne == "moderne court" %>
          <%= form.label :pct %>
          <%= form.number_field :pct, class: "form-control", id: "inputPassword4", placeholder:"Physique chimie" %>
      <% elsif @user.moderne == "moderne long all" %>
          <%= form.label :allemand %>
          <%= form.number_field :allemand, class: "form-control", id: "inputPassword4", placeholder:"Allemand" %>
      <% elsif @user.moderne == "moderne long esp." %>
          <%= form.label :esp %>
          <%= form.number_field :esp, class: "form-control", id: "inputPassword4", placeholder:"Espagnol" %>
      <% end %>

    </div>

  </div>


  <div class="row form-row field ">

    <div class="form-group col-md-6">
      <%= form.label :svt %>
      <%= form.number_field :svt , class: "form-control", id: "inputPassword4", placeholder:"histoire géographie" %>
    </div>

    <div class="form-group col-md-6">
      <%= form.label :hisgeo %>
      <%= form.number_field :hisgeo, class: "form-control", id: "inputPassword4", placeholder:"histoire géographie" %>
    </div>

  </div>






  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
